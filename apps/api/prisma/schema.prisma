generator client {
  provider = "prisma-client-js"
}

generator prismabox {
  provider                     = "prismabox"
  typeboxImportDependencyName  = "elysia"
  typeboxImportVariableName    = "t"
  inputModel                   = true
  output                       = "../generated/prismabox"
}

datasource db {
  provider = "mysql"
}

// ==========================================
// ENUMS
// ==========================================

enum Role {
  USER
  ADMIN
}

enum TokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

// ==========================================
// USER & AUTHENTICATION
// ==========================================

// Temporary table untuk user yang belum verify email
model PendingUser {
  id                String   @id @default(uuid())
  email             String   @unique
  password          String
  name              String?
  verificationToken String   @unique
  expiresAt         DateTime // Token expiry (misal 24 jam)

  createdAt DateTime @default(now())

  @@index([verificationToken])
  @@index([expiresAt])
  @@map("pending_users")
}

// User yang sudah verified
model User {
  id     String  @id @default(uuid())
  email  String  @unique
  password String
  name   String?
  avatar String?
  bio    String? @db.Text
  role   Role    @default(USER)
  isActive Boolean @default(true)

  // Relations
  refreshTokens      RefreshToken[]
  verificationTokens VerificationToken[]
  galleries          Gallery[]
  images             Image[]
  comments           Comment[]
  likes              Like[]
  bookmarks          Bookmark[]
  followers          Follow[] @relation("Following")
  following          Follow[] @relation("Followers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model RefreshToken {
  id     String @id @default(uuid())
  token  String @unique @db.VarChar(500)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  deviceInfo String? // Info device/browser (User-Agent)
  ipAddress  String?
  isRevoked  Boolean  @default(false)
  expiresAt  DateTime

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

// Token untuk email verification (re-send) & password reset
model VerificationToken {
  id        String    @id @default(uuid())
  token     String    @unique
  type      TokenType
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime? // Null jika belum digunakan

  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
  @@map("verification_tokens")
}

// ==========================================
// GALLERY & IMAGES
// ==========================================

model Category {
  id          String  @id @default(uuid())
  name        String  @unique
  slug        String  @unique
  description String? @db.Text
  coverImage  String?

  galleries Gallery[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Gallery {
  id          String  @id @default(uuid())
  title       String
  slug        String  @unique
  description String? @db.Text
  coverImage  String?
  isPublic    Boolean @default(true)
  viewCount   Int     @default(0)

  // Relations
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  images    Image[]
  tags      TagsOnGalleries[]
  comments  Comment[]
  likes     Like[]
  bookmarks Bookmark[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
  @@index([slug])
  @@map("galleries")
}

model Image {
  id           String  @id @default(uuid())
  title        String?
  description  String? @db.Text
  filename     String
  url          String
  thumbnailUrl String?
  mimeType     String
  size         Int // in bytes
  width        Int?
  height       Int?
  viewCount    Int     @default(0)

  // Relations
  galleryId String
  gallery   Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  tags      TagsOnImages[]
  comments  Comment[]
  likes     Like[]
  bookmarks Bookmark[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([galleryId])
  @@index([userId])
  @@map("images")
}

// ==========================================
// TAGS (Many-to-Many)
// ==========================================

model Tag {
  id   String @id @default(uuid())
  name String @unique
  slug String @unique

  galleries TagsOnGalleries[]
  images    TagsOnImages[]

  createdAt DateTime @default(now())

  @@map("tags")
}

model TagsOnGalleries {
  id        String  @id @default(uuid())
  gallery   Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  galleryId String
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId     String

  @@unique([galleryId, tagId])
  @@map("tags_on_galleries")
}

model TagsOnImages {
  id      String @id @default(uuid())
  image   Image  @relation(fields: [imageId], references: [id], onDelete: Cascade)
  imageId String
  tag     Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId   String

  @@unique([imageId, tagId])
  @@map("tags_on_images")
}

// ==========================================
// COMMENTS (Polymorphic - Gallery & Image)
// ==========================================

model Comment {
  id      String @id @default(uuid())
  content String @db.Text

  // Author
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Polymorphic relation (comment bisa di Gallery atau Image)
  galleryId String?
  gallery   Gallery? @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  imageId   String?
  image     Image?   @relation(fields: [imageId], references: [id], onDelete: Cascade)

  // Nested comments (reply)
  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Comment[] @relation("CommentReplies")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([galleryId])
  @@index([imageId])
  @@index([parentId])
  @@map("comments")
}

// ==========================================
// LIKES (Polymorphic - Gallery & Image)
// ==========================================

model Like {
  id String @id @default(uuid())

  // User yang like
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Polymorphic relation (like bisa di Gallery atau Image)
  galleryId String?
  gallery   Gallery? @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  imageId   String?
  image     Image?   @relation(fields: [imageId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // Ensure user can only like once per gallery/image
  @@unique([userId, galleryId])
  @@unique([userId, imageId])
  @@index([galleryId])
  @@index([imageId])
  @@map("likes")
}

// ==========================================
// BOOKMARKS (Polymorphic - Gallery & Image)
// ==========================================

model Bookmark {
  id String @id @default(uuid())

  // User yang bookmark
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Polymorphic relation (bookmark bisa di Gallery atau Image)
  galleryId String?
  gallery   Gallery? @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  imageId   String?
  image     Image?   @relation(fields: [imageId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // Ensure user can only bookmark once per gallery/image
  @@unique([userId, galleryId])
  @@unique([userId, imageId])
  @@index([userId])
  @@index([galleryId])
  @@index([imageId])
  @@map("bookmarks")
}

// ==========================================
// FOLLOW (User-to-User)
// ==========================================

model Follow {
  id String @id @default(uuid())

  // User yang melakukan follow
  followerId String
  follower   User   @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)

  // User yang di-follow
  followingId String
  following   User   @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // Ensure user can only follow once per user
  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}